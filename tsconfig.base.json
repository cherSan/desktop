{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@miner/applications": ["libs/applications/src/index.ts"],
      "@miner/charts": ["libs/charts/src/index.ts"],
      "@miner/graph-ql-client": ["libs/graph-ql-client/src/index.ts"],
      "@miner/grid": ["libs/grid/src/index.ts"],
      "@miner/pipes": ["libs/pipes/src/index.ts"],
      "applications/etherenum-classic-pool": [
        "libs/applications/etherenum-classic-pool/src/index.ts"
      ],
      "applications/etherenumClassic": [
        "libs/applications/etherenum-classic/src/index.ts"
      ],
      "applications/ethereum-classic-pool": [
        "libs/applications/ethereum-classic-pool/src/index.ts"
      ],
      "applications/programs": ["libs/applications/programs/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
